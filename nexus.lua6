-- AUTO TP fonction
local function autoSteal()
    if basePosition then
        spawn(function()
            local char = player.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                local hrp = char.HumanoidRootPart
                
                -- TP avec effet
                for i = 1, 3 do
                    hrp.CFrame = CFrame.new(basePosition)
                    wait(0.01)
                end
                
                -- Animation du status
                subtitle.Text = "üî• BRAINROT STOLEN! üî•"
                subtitle.TextColor3 = Color3.new(1, 0.5, 0)
                status.Text = "üöÄ Teleported to base!"
                status.TextColor3 = Color3.new(1, 0, 1)
                
                -- Reset apr√®s 2 secondes
                wait(2)
                subtitle.Text = "‚ú® Stealing In Progress... ‚ú®"
                subtitle.TextColor3 = Color3.new(0.7, 0.7, 1)
                status.Text = "‚ö° Ready to steal brainrot!"
                status.TextColor3 = Color3.new(0, 1, 0.5)
            end
        end)
    else
        status.Text = "‚ùå Set base position first!"
        status.TextColor3 = Color3.new(1, 0, 0)
        wait(2)
        status.Text = "‚ö° Ready to steal brainrot!"
        status.TextColor3 = Color3.new(0, 1, 0.5)
    end
end

