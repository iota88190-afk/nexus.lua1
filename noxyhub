-- Noxy Hub Interface (With Allow/Disallow)
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TitleBar = Instance.new("Frame")
local TitleLabel = Instance.new("TextLabel")
local CloseButton = Instance.new("TextButton")
local AutoBatButton = Instance.new("TextButton")
local NamelessButton = Instance.new("TextButton")
local SpeedBoostButton = Instance.new("TextButton")
local AllowDisallowButton = Instance.new("TextButton")

-- Configuration
ScreenGui.Name = "NoxyHub"
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame (Plus haut pour le nouveau bouton)
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.5, -90, 0.5, -170)
MainFrame.Size = UDim2.new(0, 180, 0, 340)
MainFrame.Active = true
MainFrame.Draggable = true

-- Title Bar
TitleBar.Name = "TitleBar"
TitleBar.Parent = MainFrame
TitleBar.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
TitleBar.BorderSizePixel = 0
TitleBar.Size = UDim2.new(1, 0, 0, 35)

-- Title Label
TitleLabel.Name = "TitleLabel"
TitleLabel.Parent = TitleBar
TitleLabel.BackgroundTransparency = 1
TitleLabel.Position = UDim2.new(0, 8, 0, 0)
TitleLabel.Size = UDim2.new(1, -40, 1, 0)
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.Text = "Noxy Hub"
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.TextScaled = true
TitleLabel.TextXAlignment = Enum.TextXAlignment.Left

-- Close Button
CloseButton.Name = "CloseButton"
CloseButton.Parent = TitleBar
CloseButton.BackgroundTransparency = 1
CloseButton.Position = UDim2.new(1, -32, 0, 0)
CloseButton.Size = UDim2.new(0, 32, 1, 0)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.TextScaled = true

-- Auto Bat Button
AutoBatButton.Name = "AutoBatButton"
AutoBatButton.Parent = MainFrame
AutoBatButton.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
AutoBatButton.BorderSizePixel = 0
AutoBatButton.Position = UDim2.new(0, 10, 0, 50)
AutoBatButton.Size = UDim2.new(1, -20, 0, 55)
AutoBatButton.Font = Enum.Font.GothamBold
AutoBatButton.Text = "Auto Bat"
AutoBatButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AutoBatButton.TextScaled = true

-- Nameless Button
NamelessButton.Name = "NamelessButton"
NamelessButton.Parent = MainFrame
NamelessButton.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
NamelessButton.BorderSizePixel = 0
NamelessButton.Position = UDim2.new(0, 10, 0, 115)
NamelessButton.Size = UDim2.new(1, -20, 0, 55)
NamelessButton.Font = Enum.Font.GothamBold
NamelessButton.Text = "NAMELESS"
NamelessButton.TextColor3 = Color3.fromRGB(255, 255, 255)
NamelessButton.TextScaled = true

-- Speed Boost Button
SpeedBoostButton.Name = "SpeedBoostButton"
SpeedBoostButton.Parent = MainFrame
SpeedBoostButton.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
SpeedBoostButton.BorderSizePixel = 0
SpeedBoostButton.Position = UDim2.new(0, 10, 0, 180)
SpeedBoostButton.Size = UDim2.new(1, -20, 0, 55)
SpeedBoostButton.Font = Enum.Font.GothamBold
SpeedBoostButton.Text = "Speed Boost"
SpeedBoostButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedBoostButton.TextScaled = true

-- Allow/Disallow Button
AllowDisallowButton.Name = "AllowDisallowButton"
AllowDisallowButton.Parent = MainFrame
AllowDisallowButton.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
AllowDisallowButton.BorderSizePixel = 0
AllowDisallowButton.Position = UDim2.new(0, 10, 0, 245)
AllowDisallowButton.Size = UDim2.new(1, -20, 0, 55)
AllowDisallowButton.Font = Enum.Font.GothamBold
AllowDisallowButton.Text = "ALLOW/DISALLOW"
AllowDisallowButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AllowDisallowButton.TextScaled = true

-- Button Functions
AutoBatButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://pandadevelopment.net/virtual/file/bf7fbb5f9e5d3cf5"))()
end)

NamelessButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ily123950/Vulkan/refs/heads/main/Tr"))()
end)

SpeedBoostButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://monlua-protector.vercel.app/raw/deaf66d32110b98505c2c3eabb58e687"))()
end)

AllowDisallowButton.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://pastebin.com/raw/aipXbhpf",true))()
end)

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Corner Rounding
local function addCorners(frame)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 6)
    corner.Parent = frame
end

addCorners(MainFrame)
addCorners(AutoBatButton)
addCorners(NamelessButton)
addCorners(SpeedBoostButton)
addCorners(AllowDisallowButton)
